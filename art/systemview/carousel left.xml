<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>
  
<view name="system">
<image name="background" extra="true">
<tile>false</tile>
<size>1 1</size>
<pos>0 0</pos>
<origin>0 0</origin>
<path>./art/fondos/systemcarouseliz.png</path>
<zIndex>10</zIndex>
</image>
    
<image name="background2" extra="true">
<tile>false</tile>
<pos>0.037 0.50</pos>
<origin>0.5 0.5</origin>
<size>0.075 0.175</size>
<path>./art/sistemas/pointerl/default.png</path>
<path>./art/sistemas/pointerl/${system.theme}.png</path>
<zIndex>90</zIndex>
</image>
    
<image name="predeterminado" extra="true">
<tile>false</tile>
<Delay>800</Delay>
<pos>0.6916 0.507</pos>
<origin>0.5 0.5</origin>
<size>0.4470 0.449</size>
<path>./art/fondos/default.png</path>
<zIndex>20</zIndex>
<storyboard>
        <animation property="y" from="0.05" begin="0" duration="350" mode="easeOut"/>
        <animation property="opacity" from="0" to="1" duration="2950" mode="easeIn"/>
        <animation property="scale" from="0" to="1" duration="350" mode="easeOut"/>
      </storyboard>
</image>

<video name="backgroundvideo" extra="true">
<visible>true</visible>
<path>{random}</path>                    
<pos>0.6916 0.507</pos>
<origin>0.5 0.5</origin>
<size>0.4470 0.449</size>
<delay>0</delay>
<showSnapshotNoVideo>false</showSnapshotNoVideo>
<showSnapshotDelay>false</showSnapshotDelay>
<color>FFFFFF</color>   
<storyboard>       
<animation property="opacity" from="0" to="1" duration="950" mode="easeIn"/>
        <animation property="-y" from="1.0" begin="0" duration="1250" mode="easeOut"/>    
</storyboard>
<zIndex>30</zIndex>
</video>
    
<image name="personaje" extra="true">
<path>./art/sistemas/character/default.png</path>
<path>./art/sistemas/character/${system.theme}.png</path>
<color>FFFFFFFF</color>
<origin>0 0</origin>
<pos>0.3050 0.2567</pos>
<size>0.2595 0.7455</size>
<storyboard>       
        <animation property="scale" from="0.9" to="1.0" begin="500" duration="1200" mode="easeInOut" autoreverse="true" repeat="forever"/>        
</storyboard>
<zIndex>60</zIndex>
</image>    

<helpsystem name="help">
<textColor>00000000</textColor>
<iconColor>00000000</iconColor>
<fontSize>0.020</fontSize>
<pos>0.29 0.97</pos>
</helpsystem>

<carousel name="systemcarousel">
<type>vertical_wheel</type>
<pos>-0.686 0</pos>
<size>1 1</size>
<origin>0 0</origin>
<color>00000000</color>
<logoScale>1.35</logoScale>
<logoSize>0.150 0.260</logoSize>
<logoRotation>15</logoRotation>
<logoRotationOrigin>-2.0 0.5</logoRotationOrigin>
<logoAlignment>right</logoAlignment>
<maxLogoCount>13</maxLogoCount>
<zIndex>75</zIndex>
<scrollSound>./art/sonidos/computerbeep_19.mp3</scrollSound>
</carousel>

<text name="systemInfo">
<systemInfoDelay>700</systemInfoDelay>
<pos>0.18 0.78</pos>
<fontSize>0.03</fontSize>
<fontPath>./art/fuentes/Bebas Neue.ttf</fontPath>
<backgroundColor>00000000</backgroundColor>
<color>FFFFFF</color>
<glowColor>050505</glowColor>
<glowSize>2</glowSize>
<reflexion>0.60 0.0</reflexion>
<storyboard>       
<animation property="opacity" from="0" to="1" duration="950" mode="easeIn"/>
        <animation property="x" from="1.0" begin="0" duration="1250" mode="easeOut"/>  
</storyboard>
</text>
    
<text name="logoText">
<fontPath>./art/fuentes/Bebas Neue.ttf</fontPath>
<color>${baseColor}</color>
<forceUppercase>true</forceUppercase>
</text>
<image name="logo">
<path>./art/sistemas/silverring/default.png</path>
<path>./art/sistemas/silverring/${system.theme}.png</path>
<path>./${system.theme}/art/system-${lang}.png</path>
<path>./${system.theme}/art/system-${lang}.svg</path>
</image>    
</view>
</theme>
